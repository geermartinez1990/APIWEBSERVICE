<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleActivity">

    <TextView
        android:id="@+id/textViewIdCiudadDetalle"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:focusable="false"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPicasso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEdadDetalle"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/textViewApellidoDetalle"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:focusable="false"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNombreDetalle"
        app:layout_constraintVertical_bias="0.009" />

    <TextView
        android:id="@+id/textViewNombreDetalle"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:text="TextView"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEdadDetalle"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:clickable="false"
        android:focusable="false"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewApellidoDetalle" />

    <ImageView
        android:id="@+id/imageViewPicasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEdadDetalle"
        app:srcCompat="@mipmap/ic_launcher" />
</android.support.constraint.ConstraintLayout>